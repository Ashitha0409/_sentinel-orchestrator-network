# Blockfrost API (Cardano blockchain access)
BLOCKFROST_API_KEY=your_blockfrost_api_key_here
BLOCKFROST_NETWORK=preview

# Masumi Agent Registry
MASUMI_API_URL=https://api.masumi.network
MASUMI_API_KEY=your_masumi_api_key_here

# Hydra Node Connection
HYDRA_WS_URL=ws://127.0.0.1:4001
HYDRA_NODE_ID=son-hydra-node-1

# Midnight Devnet
MIDNIGHT_DEVNET_URL=http://localhost:9000
MIDNIGHT_MOCK_MODE=true

# Backend Configuration
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000

# Authentication (TODO: Implement proper auth)
AUTH_TOKEN=son_hackathon_token_2025
